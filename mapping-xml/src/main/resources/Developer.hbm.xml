<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.company.hibernate.model.Developer" table="developers">
        <id name="id" type="java.lang.Long" column="id" >
            <generator class="native"/>
        </id>

        <property name="firstName" column="first_name" type="java.lang.String"/>
        <property name="lastName" column="last_name" type="java.lang.String"/>
        <property name="specialty" column="specialty" type="java.lang.String"/>
        <property name="salary" column="salary" type="java.math.BigDecimal"/>

        <set name="projects" table="projects" inverse="true" lazy="false" fetch="select">
            <key>
                <column name="developer_id" not-null="true" />
            </key>
            <one-to-many class="com.company.hibernate.model.Project" />
        </set>
    </class>

</hibernate-mapping>