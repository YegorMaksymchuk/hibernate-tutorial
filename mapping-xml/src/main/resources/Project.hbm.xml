<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.company.hibernate.model.Project" table="projects">
        <id name="id" type="java.lang.Long" column="id">
            <generator class="native"/>
        </id>

        <property name="name" type="java.lang.String" column="name"/>

        <set name="developers" table="developers" inverse="true" lazy="false" fetch="select" cascade="all">
            <key>
                <column name="project_id" not-null="true"/>
            </key>
            <one-to-many class="com.company.hibernate.model.Developer"/>
        </set>
    </class>

</hibernate-mapping>