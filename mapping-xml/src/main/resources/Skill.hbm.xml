<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.company.hibernate.model.Skill" table="skills">
        <id name="id" type="java.lang.Long" column="id">
            <generator class="native"/>
        </id>

        <property name="skill" type="java.lang.String" column="skill"/>

        <set name="developers" table="developer_skills" inverse="true" lazy="false" fetch="select" cascade="all">
            <key>
                <column name="skill_id" not-null="true"/>
            </key>
            <many-to-many class="com.company.hibernate.model.Developer">
                <column name="developer_id"/>
            </many-to-many>
        </set>
    </class>

</hibernate-mapping>